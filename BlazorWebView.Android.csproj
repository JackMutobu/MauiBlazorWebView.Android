<Project Sdk="Microsoft.NET.Sdk.Razor">
	<PropertyGroup>
		<TargetFramework>net6.0-android</TargetFramework>
		<SupportedOSPlatformVersion>21</SupportedOSPlatformVersion>
		<OutputType>Exe</OutputType>
		<Nullable>enable</Nullable>
		<RootNamespace>BlazorWebView</RootNamespace>
		<ImplicitUsings>enable</ImplicitUsings>
		<ApplicationId>com.companyname.BlazorWebView.Android</ApplicationId>
		<ApplicationVersion>1</ApplicationVersion>
		<ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
	</PropertyGroup>
	<ItemGroup>
		<AndroidAsset Include="wwwroot" />
		<AndroidAsset Include="wwwroot\**\*.html" />
		<AndroidAsset Include="wwwroot\**\*.css" />
		<AndroidAsset Include="wwwroot\**\*.json" />
		<AndroidAsset Include="wwwroot\**\*.js" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Authorization" Version="6.0.0" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebView" Version="6.0.0" />
		<PackageReference Include="Microsoft.JSInterop" Version="6.0.0" />
		<PackageReference Include="Xamarin.AndroidX.Fragment" Version="1.3.6.4" />
		<PackageReference Include="Xamarin.Essentials" Version="1.7.0" />
	</ItemGroup>
</Project>